{{#> layout}}

  {{#*inline "content"}}
    <!-- START CENTERED WHITE CONTAINER -->
    <!--suppress HtmlDeprecatedAttribute -->
    <table class="main" role="presentation">
      <!-- START MAIN CONTENT AREA -->
      <tr>
        <td class="wrapper">
          <table border="0" cellpadding="0" cellspacing="0" role="presentation">
            <tr>
              <td>
                <p>Welcome {{user.firstName}},</p>
                <p>Thank you for registering with us. To complete your registration, please verify your email address by
                  clicking the button below:</p>
                <table border="0" cellpadding="0" cellspacing="0" class="btn btn-primary" role="presentation">
                  <tbody>
                  <tr>
                    <td align="center">
                      <table border="0" cellpadding="0" cellspacing="0" role="presentation">
                        <tbody>
                        <tr>
                          <td>
                            <a href="{{verificationLink}}/{{email}}/{{token}}" target="_blank">Verify Email</a>
                          </td>
                        </tr>
                        </tbody>
                      </table>
                    </td>
                  </tr>
                  </tbody>
                </table>
                <p>If you did not create an account, please ignore this email.</p>
                <p>This verification link will expire in 24 hours.</p>

              </td>
            </tr>
          </table>
        </td>
      </tr>
      <!-- END MAIN CONTENT AREA -->
    </table>
    <!-- END CENTERED WHITE CONTAINER -->
  {{/inline}}
{{/layout}}

